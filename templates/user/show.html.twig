{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-info" ><a href="{{ path('app_user_edit', {'id': user.id}) }}" style="color:white; text-decoration:none">edit</a></button>

    <div class="mt-3 mb-3">
        {{ include('user/_delete_form.html.twig') }}
    </div>
    <a href="{{ path('app_user_index') }}">back to list</a>
{% endblock %}
