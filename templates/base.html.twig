<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel= "stylesheet" href="https://bootswatch.com/5/zephyr/bootstrap.min.css"/>
        <style>
            .content {
                margin: 1rem;
            }
        </style>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block header %} 
            <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
                <div class="container-fluid">
                    {# <a class="navbar-brand" href="#">Navbar</a> #}
                    <a class="navbar-brand" href="#">
                        {% if is_granted('ROLE_ADMIN') %}
                            Admin
                        {% elseif is_granted('ROLE_SPECTATEUR') %}
                            Spectateur
                        {% else %}
                            Navbar
                        {% endif %}
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        {# <li class="nav-item">
                        <a class="nav-link active" href="#">Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                        </li> #}
                        {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_user_index') }}">Users</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" href="{{path('app_categorie_index')}}">Categories</a>
                        </li>
                        {% endif %}
                        {% if is_granted('ROLE_SPECTATEUR') or is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                        <a class="nav-link" href="{{path('app_ticket_index')}}">Tickets</a>
                        </li>
                        {% endif %}
                        
                        {# <li class="nav-item">
                        <a class="nav-link" href="#">Pricing</a>
                        </li> #}
                        
                        {# <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Separated link</a>
                        </div>
                        </li> #}
                    </ul>
                    {% if app.user %}
                    <button class="btn btn-secondary m-2 my-sm-0 "> <a href="{{ path('app_logout') }}" style="text-decoration:none; font-weight:bold;">Logout</a></button>
                    {% elseif app.request.get('_route') == 'app_login' %}
                    <button class="btn btn-secondary m-2 my-sm-0 "> <a href="{{ path('app_register') }}" style="text-decoration:none; font-weight:bold;">Register</a></button>
                    {% else %}
                    <button class="btn btn-secondary m-2 my-sm-0 "> <a href="{{ path('app_login') }}" style="text-decoration:none; font-weight:bold;">Login</a></button>
                    {% endif %}
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                    </div>
                </div>
            </nav>
        {% endblock %}
        <div class="content">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
